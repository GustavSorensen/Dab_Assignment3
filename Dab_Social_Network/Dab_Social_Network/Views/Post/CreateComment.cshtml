@model Dab_Social_Network.Models.Comment

@{
    ViewData["Title"] = "CreateComment";
}
@{ 
    var userId = ViewData["UserId"] as string;
}
@{ 
    var postId = ViewData["PostId"] as string;
}
<h1>CreateComment</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <input asp-for="Id" style="display: none" />
            <input asp-for="UserId" style="display: none" value="@userId" />
            <input asp-for="PostId" style="display: none" value="@postId" />
            <input asp-for="TimeCreated" style="display: none"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

